<Window x:Class="Log_Sentinel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Log Sentinel"
        Height="600"
        Width="1000"
        Background="#F1F5F9"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Nội dung -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0" Padding="10">
            <StackPanel>
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,40" HorizontalAlignment="Center">
                    <Ellipse Width="35" Height="35" Fill="#2563EB"/>
                    <TextBlock Text="Eedu.plan"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel>
                    <Button Content="🏠  Dashboard" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="🧩  Rule" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="📊  Events" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="⚙️  Settings" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="❓  Help" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="ℹ️  About Us" Style="{StaticResource SidebarButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- NỘI DUNG CHÍNH -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="Dashboard Overview"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#1E293B"
                       Margin="0,0,0,20"/>

            <!-- Hai bảng chia đôi -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Bảng 1 -->
                <Border Grid.Column="0" Background="White" CornerRadius="10"
                        Padding="15" BorderBrush="#E2E8F0" BorderThickness="1"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="System Logs"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <DataGrid AutoGenerateColumns="True"
                                  Height="200"
                                  Background="#F8FAFC"
                                  BorderBrush="#CBD5E1"
                                  BorderThickness="1"
                                  IsReadOnly="True"/>
                    </StackPanel>
                </Border>

                <!-- Bảng 2 -->
                <Border Grid.Column="1" Background="White" CornerRadius="10"
                        Padding="15" BorderBrush="#E2E8F0" BorderThickness="1"
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Event Reports"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <DataGrid AutoGenerateColumns="True"
                                  Height="200"
                                  Background="#F8FAFC"
                                  BorderBrush="#CBD5E1"
                                  BorderThickness="1"
                                  IsReadOnly="True"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
