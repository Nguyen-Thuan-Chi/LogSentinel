<Window x:Class="Log_Sentinel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Log_Sentinel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Log Sentinel" 
        Height="720" 
        Width="1280"
        Background="#F8FAFC"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="#1E293B"

        TextElement.FontWeight="Normal"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.Resources>
        <!-- Style cho các mục trong ListBox ở sidebar -->
        <Style x:Key="SidebarListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hiệu ứng khi di chuột qua -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                            <!-- Hiệu ứng khi được chọn -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Local fallback for OptimizedButton to prevent StaticResource load issues -->
        <Style x:Key="OptimizedButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <!-- Sidebar rộng hơn một chút -->
            <ColumnDefinition Width="*"/>
            <!-- Nội dung chính -->
        </Grid.ColumnDefinitions>

        <!-- ======================= -->
        <!--        SIDEBAR          -->
        <!-- ======================= -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Phần trên: Logo, Search, Menu chính -->
                    <RowDefinition Height="*"/>
                    <!-- Phần trống ở giữa -->
                    <RowDefinition Height="Auto"/>
                    <!-- Phần dưới: Settings, About -->
                </Grid.RowDefinitions>

                <!-- Phần trên của Sidebar -->
                <StackPanel Grid.Row="0" Margin="15">
                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal" Margin="5,15,0,25" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="ShieldOutline" Width="30" Height="30" Foreground="#2563EB" VerticalAlignment="Center"/>
                        <TextBlock Text="Log Sentinel"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#1E293B"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Quick actions + Global Display Mode -->
                    <Border Background="#F1F5F9" CornerRadius="8" Padding="12" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Quick actions"
                                       Foreground="#64748B"
                                       Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Display Mode:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="DisplayModeComboBox"
                                          Width="90"
                                          Margin="12,0,0,0"
                                          SelectedValue="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GlobalSettings.DisplayMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="Content"
                                          SelectionChanged="DisplayModeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="User" />
                                    <ComboBoxItem Content="Professional" />
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Menu Chính -->
                    <ListBox x:Name="MainNavListBox"
                             SelectionMode="Single"
                             SelectedIndex="0"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectionChanged="MainNavListBox_SelectionChanged"
                             Margin="0,0,0,10">
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}" IsSelected="True">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <!-- Log Viewer mới (Xem log chi tiết) -->
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocument" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Log Viewer" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Gavel" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Rules" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Bell" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Alerts" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Analytics" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="SwapHorizontal" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Import / Export" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>

                <!-- Phần dưới của Sidebar -->
                <StackPanel Grid.Row="2" Margin="15">
                    <Separator Margin="0,0,0,10"/>
                    <ListBox x:Name="SecondaryNavListBox" 
                             SelectedIndex="-1" 
                             SelectionMode="Single" 
                             BorderThickness="0" 
                             Background="Transparent"
                             SelectionChanged="SecondaryNavListBox_SelectionChanged">
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Information" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="About Us" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="HelpCircle" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Help" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>

            </Grid>
        </Border>

        <!-- ======================= -->
        <!--      NỘI DUNG CHÍNH     -->
        <!-- ======================= -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>

        <!-- Notification host placeholder (can be replaced with Snackbar later) -->
    </Grid>
</Window>
