<Window x:Class="Log_Sentinel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Log_Sentinel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Log Sentinel" 
        Height="720" 
        Width="1280"
        Background="#F8FAFC"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="#1E293B"

        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.Resources>
        <!-- Style cho các mục trong ListBox ở sidebar -->
        <Style x:Key="SidebarListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hiệu ứng khi di chuột qua -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                            <!-- Hiệu ứng khi được chọn -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <!-- Sidebar rộng hơn một chút -->
            <ColumnDefinition Width="*"/>
            <!-- Nội dung chính -->
        </Grid.ColumnDefinitions>

        <!-- ======================= -->
        <!--        SIDEBAR          -->
        <!-- ======================= -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Phần trên: Logo, Search, Menu chính -->
                    <RowDefinition Height="*"/>
                    <!-- Phần trống ở giữa -->
                    <RowDefinition Height="Auto"/>
                    <!-- Phần dưới: Settings, About -->
                </Grid.RowDefinitions>

                <!-- Phần trên của Sidebar -->
                <StackPanel Grid.Row="0" Margin="15">
                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal" Margin="5,15,0,25" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="ShieldLock" Width="30" Height="30" Foreground="#2563EB" VerticalAlignment="Center"/>
                        <TextBlock Text="Log Sentinel"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#1E293B"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Quick actions + Global Display Mode -->
                    <Border Background="#F1F5F9" CornerRadius="8" Padding="12" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Quick actions"
                                       Foreground="#64748B"
                                       Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Display Mode:" VerticalAlignment="Center"/>
                                <ComboBox Width="180"
                                          Margin="12,0,0,0"
                                          SelectedValue="{Binding Source={StaticResource GlobalSettings}, Path=DisplayMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedValuePath="Content">
                                    <ComboBoxItem Content="User" />
                                    <ComboBoxItem Content="Professional" />
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Menu Chính -->
                    <ListBox x:Name="MainNavListBox"
                             SelectionMode="Single"
                             SelectedIndex="0"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectionChanged="MainNavListBox_SelectionChanged">
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}" IsSelected="True">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboardOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <!-- Log Viewer mới (Xem log chi tiết) -->
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocumentOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Log Viewer" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Gavel" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Rules" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="BellOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Alerts" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Analytics" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="SwapHorizontal" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Import / Export" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>

                <!-- Phần dưới của Sidebar -->
                <StackPanel Grid.Row="2" Margin="15">
                    <Separator Margin="0,0,0,10"/>
                    <ListBox x:Name="SecondaryNavListBox" SelectedIndex="-1" SelectionMode="Single" BorderThickness="0" Background="Transparent">
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CogOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="InformationOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="About Us" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Style="{StaticResource SidebarListItemStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="HelpCircleOutline" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="Help" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>

            </Grid>
        </Border>

        <!-- ======================= -->
        <!--      NỘI DUNG CHÍNH     -->
        <!-- ======================= -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="30">
                <!-- DASHBOARD VIEW -->
                <Grid x:Name="DashboardPanel">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=MainNavListBox}" Value="0"/>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="-1"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề -->
                    <TextBlock Text="Dashboard Overview"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,10,0,25"/>

                    <!-- Summary cards: Today, Warning, Error -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Total Today -->
                        <Border Background="White" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,16,0">
                            <StackPanel>
                                <TextBlock Text="Logs Today" Foreground="#64748B"/>
                                <TextBlock Text="{Binding TotalToday}" FontSize="26" FontWeight="Bold" Foreground="#1E293B"/>
                            </StackPanel>
                        </Border>
                        <!-- Warnings -->
                        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,16,0">
                            <StackPanel>
                                <TextBlock Text="Warnings" Foreground="#64748B"/>
                                <TextBlock Text="{Binding WarningCount}" FontSize="26" FontWeight="Bold" Foreground="#F59E0B"/>
                            </StackPanel>
                        </Border>
                        <!-- Errors -->
                        <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Errors" Foreground="#64748B"/>
                                <TextBlock Text="{Binding ErrorCount}" FontSize="26" FontWeight="Bold" Foreground="#DC2626"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- System Logs full width -->
                    <Border Grid.Row="2" Background="White" CornerRadius="12"
                            Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="System Logs"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>
                            <DataGrid x:Name="SystemLogsGrid"
                                      Height="500"
                                      Background="Transparent"
                                      BorderBrush="#E2E8F0"
                                      BorderThickness="1"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#E2E8F0"
                                      RowHeight="35"
                                      AutoGenerateColumns="False"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="150"/>
                                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="100"/>
                                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- LOG VIEWER VIEW -->
                <Grid x:Name="LogViewerPanel" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=MainNavListBox}" Value="1"/>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="-1"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Log Viewer"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,10,0,25"/>

                    <!-- Bộ lọc: thời gian, mức độ, module -->
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="From"/>
                                <DatePicker Width="160"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="To"/>
                                <DatePicker Width="160"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="Level"/>
                                <ComboBox Width="160" SelectedIndex="0">
                                    <ComboBoxItem Content="All"/>
                                    <ComboBoxItem Content="Info"/>
                                    <ComboBoxItem Content="Warning"/>
                                    <ComboBoxItem Content="Error"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="Module"/>
                                <ComboBox Width="200">
                                    <ComboBoxItem Content="All"/>
                                    <ComboBoxItem Content="Auth"/>
                                    <ComboBoxItem Content="Network"/>
                                    <ComboBoxItem Content="Storage"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="0,0,12,0" VerticalAlignment="Bottom">
                                <TextBlock Text="Search"/>
                                <TextBox Width="220" materialDesign:HintAssist.Hint="Message contains..."/>
                            </StackPanel>
                            <Button Content="Apply" Style="{StaticResource OptimizedButton}" Margin="12,18,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Event Reports đặt trong Log Viewer -->
                    <Border Grid.Row="2" Background="White" CornerRadius="12"
                            Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Event Reports"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>
                            <DataGrid x:Name="EventReportsGrid"
                                      Height="500"
                                      Background="Transparent"
                                      BorderBrush="#E2E8F0"
                                      BorderThickness="1"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#E2E8F0"
                                      RowHeight="35"
                                      AutoGenerateColumns="False"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="150"/>
                                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="100"/>
                                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- RULES VIEW -->
                <Grid x:Name="RulesPanel" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=MainNavListBox}" Value="2"/>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="-1"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Rules" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,10,0,25"/>

                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="Add Rule" Style="{StaticResource OptimizedButton}"/>
                            <Separator Width="16" Background="Transparent"/>
                            <TextBlock Text="Filter:" VerticalAlignment="Center"/>
                            <TextBox Width="240" Margin="8,0,0,0" materialDesign:HintAssist.Hint="Search rules"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                        <DataGrid Height="520"
                                  Background="Transparent"
                                  BorderBrush="#E2E8F0" BorderThickness="1"
                                  IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False"
                                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E2E8F0"
                                  RowHeight="40" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Rule Name" Binding="{Binding Name}" Width="200"/>
                                <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="*"/>
                                <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="120"/>
                                <DataGridTemplateColumn Header="Enabled" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton IsChecked="{Binding IsEnabled}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>

                <!-- ALERTS VIEW -->
                <Grid x:Name="AlertsPanel" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=MainNavListBox}" Value="3"/>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="-1"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Alerts" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,10,0,25"/>
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                        <DataGrid Height="560"
                                  Background="Transparent"
                                  BorderBrush="#E2E8F0" BorderThickness="1"
                                  IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False"
                                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E2E8F0"
                                  RowHeight="40" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="160"/>
                                <DataGridTemplateColumn Header="Severity" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialDesign:PackIcon Kind="AlertCircleOutline" Width="20" Height="20" Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding Severity}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Rule" Binding="{Binding RuleName}" Width="220"/>
                                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>

                <!-- ANALYTICS VIEW -->
                <Grid x:Name="AnalyticsPanel" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=MainNavListBox}" Value="4"/>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="-1"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Analytics" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,10,0,25"/>
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                        <TextBlock Text="Charts placeholder (LiveCharts2 / OxyPlot - later)"/>
                    </Border>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,16,16">
                            <TextBlock Text="Logs by Level (chart)"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                            <TextBlock Text="Logs by Source (chart)"/>
                        </Border>
                        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                            <TextBlock Text="Trend over time (chart)"/>
                        </Border>
                    </Grid>
                </Grid>

                <!-- IMPORT / EXPORT VIEW -->
                <Grid x:Name="ImportExportPanel" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=MainNavListBox}" Value="5"/>
                                        <Condition Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="-1"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Import / Export" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,10,0,25"/>
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="Import Rules (JSON)" Style="{StaticResource OptimizedButton}" Margin="0,0,12,0"/>
                            <Button Content="Export Logs (CSV)" Style="{StaticResource OptimizedButton}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- SETTINGS / ABOUT / HELP VIEW -->
                <Grid x:Name="SettingsPanel" Visibility="Collapsed">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="1">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedIndex, ElementName=SecondaryNavListBox}" Value="2">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Settings / About / Help" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,10,0,25"/>
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="General" Style="{StaticResource OptimizedButton}" Margin="0,0,12,0"/>
                            <Button Content="Theme" Style="{StaticResource OptimizedButton}" Margin="0,0,12,0"/>
                            <Button Content="Shortcuts" Style="{StaticResource OptimizedButton}"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                        <StackPanel>
