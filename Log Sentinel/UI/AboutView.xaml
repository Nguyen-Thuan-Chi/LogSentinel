<UserControl x:Class="Log_Sentinel.UI.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Border Background="#F8FAFC" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="About Log Sentinel" FontSize="26" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- About Content -->
            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="40" BorderBrush="#CBD5E1" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Logo -->
                    <materialDesign:PackIcon Kind="ShieldOutline" 
                                             Width="80" 
                                             Height="80" 
                                             Foreground="#2563EB"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,20"/>

                    <!-- App Name and Version -->
                    <TextBlock Text="Log Sentinel" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Version 1.0.0" 
                               FontSize="16" 
                               Foreground="#64748B"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Description -->
                    <TextBlock Text="A lightweight SIEM solution for Windows Event Log monitoring and analysis" 
                               FontSize="14" 
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="500"
                               Foreground="#475569"
                               Margin="0,0,0,30"/>

                    <Separator Margin="0,0,0,30" Width="400"/>

                    <!-- Features -->
                    <TextBlock Text="Key Features:" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="#10B981" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Real-time Event Log Monitoring" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="#10B981" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Rule-based Threat Detection (Sigma)" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="#10B981" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Alert Management and Notification" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="#10B981" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Full-Text Search with SQLite FTS5" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="#10B981" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Data Export and Reporting" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Separator Margin="0,0,0,30" Width="400"/>

                    <!-- Technology Stack -->
                    <TextBlock Text="Built with:" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <Grid Width="300" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="? .NET 9" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="? WPF + MVVM" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="? Entity Framework Core" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="? SQLite" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="? Material Design" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="? YamlDotNet" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="? Dependency Injection"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="? Async/Await"/>
                    </Grid>

                    <Separator Margin="0,0,0,30" Width="400"/>

                    <!-- Copyright and Links -->
                    <TextBlock Text="? 2025 Log Sentinel. All rights reserved." 
                               FontSize="12" 
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="?? Website" 
                                Background="Transparent"
                                Foreground="#2563EB"
                                BorderThickness="1"
                                BorderBrush="#2563EB"
                                Padding="15,8"
                                Margin="5"
                                Cursor="Hand"/>
                        <Button Content="?? Contact" 
                                Background="Transparent"
                                Foreground="#2563EB"
                                BorderThickness="1"
                                BorderBrush="#2563EB"
                                Padding="15,8"
                                Margin="5"
                                Cursor="Hand"/>
                        <Button Content="?? License" 
                                Background="Transparent"
                                Foreground="#2563EB"
                                BorderThickness="1"
                                BorderBrush="#2563EB"
                                Padding="15,8"
                                Margin="5"
                                Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
