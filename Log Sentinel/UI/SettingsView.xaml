<UserControl x:Class="Log_Sentinel.UI.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#F8FAFC" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Settings" FontSize="26" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Settings Content -->
            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="30" BorderBrush="#CBD5E1" BorderThickness="1">
                <StackPanel>
                    <!-- General Settings -->
                    <TextBlock Text="General Settings" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Display Mode -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Display Mode:" VerticalAlignment="Center" Margin="0,0,0,15"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  SelectedValue="{Binding DisplayMode, Mode=TwoWay}"
                                  SelectedValuePath="Content"
                                  Width="200" 
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="User"/>
                            <ComboBoxItem Content="Professional" IsSelected="True"/>
                        </ComboBox>

                        <!-- Theme -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Theme:" VerticalAlignment="Center" Margin="0,0,0,15"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  Width="200" 
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Light" IsSelected="True"/>
                            <ComboBoxItem Content="Dark"/>
                            <ComboBoxItem Content="System"/>
                        </ComboBox>

                        <!-- Auto Refresh -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Auto Refresh:" VerticalAlignment="Center" Margin="0,0,0,15"/>
                        <CheckBox Grid.Row="2" Grid.Column="1" 
                                  Content="Enable automatic data refresh"
                                  IsChecked="True"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- Refresh Interval -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Refresh Interval (seconds):" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="30"
                                 Width="100" 
                                 HorizontalAlignment="Left"/>
                    </Grid>

                    <Separator Margin="0,20"/>

                    <!-- Alert Settings -->
                    <TextBlock Text="Alert Settings" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,15"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Show Notifications -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Show Notifications:" VerticalAlignment="Center" Margin="0,0,0,15"/>
                        <CheckBox Grid.Row="0" Grid.Column="1" 
                                  Content="Show desktop notifications for new alerts"
                                  IsChecked="True"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- Sound Alerts -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Sound Alerts:" VerticalAlignment="Center"/>
                        <CheckBox Grid.Row="1" Grid.Column="1" 
                                  Content="Play sound for critical alerts"
                                  IsChecked="False"
                                  VerticalAlignment="Center"/>
                    </Grid>

                    <Separator Margin="0,20"/>

                    <!-- Database Settings -->
                    <TextBlock Text="Database Settings" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Database Path:" VerticalAlignment="Center" Margin="0,0,0,15"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBox Text="{Binding DatabasePath, Mode=TwoWay}" 
                                     Width="400" 
                                     IsReadOnly="True"
                                     VerticalContentAlignment="Center"/>
                            <Button Content="Browse..." 
                                    Padding="15,5"
                                    Margin="10,0,0,0"
                                    Background="#6B7280" 
                                    Foreground="White" 
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Database Size:" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{Binding DatabaseSize}" 
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                    </Grid>

                    <!-- Save Button -->
                    <Button Content="Save Settings" 
                            Command="{Binding SaveSettingsCommand}"
                            Background="#2563EB" 
                            Foreground="White" 
                            BorderThickness="0" 
                            Padding="20,10"
                            Margin="0,30,0,0"
                            Width="150"
                            HorizontalAlignment="Left"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
