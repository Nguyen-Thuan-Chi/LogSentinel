<Window x:Class="Log_Sentinel.UI.RuleEditorDialog"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Rule Editor" Height="600" Width="700"
WindowStartupLocation="CenterOwner"
Background="#F8FAFC">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Rule Editor" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Rule Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Rule Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtRuleName" 
                     Text="{Binding RuleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="35" 
                     Padding="10"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" 
                     Text="{Binding RuleDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="60" 
                     Padding="10"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- Severity -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Severity" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbSeverity" 
                      SelectedItem="{Binding RuleSeverity, Mode=TwoWay}"
                      Height="35" 
                      Padding="10"
                      BorderBrush="#CBD5E1"
                      BorderThickness="1">
                <ComboBoxItem Content="Low" IsSelected="True"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
                <ComboBoxItem Content="Critical"/>
            </ComboBox>
        </StackPanel>

        <!-- YAML Content -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="YAML Content" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtYaml" 
                     Text="{Binding YamlContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="12"
                     Padding="10"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#6B7280"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>
            <Button Content="Save" 
                    Width="100" 
                    Height="35"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
